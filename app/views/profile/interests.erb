<div class="center boxed inner-profile" style="margin-left: 35%;">
    <h1><strong><%= "#{@user.username}'s interests" %></strong></h1>
    </br>

    <% @interests.each do |interest| %>
        <div class="card mb-2">
            <div class="card-body">
            <h5 class="card-title text-muted">
                <a href=<%= "/profile?id=#{@user.id}" %>> <%= interest[1].username %> </a>
                <small> - <%= time_ago_in_words interest[0].created_at %> ago</small>
            </h5>
            <div class="card-text lead mb-2"><%= interest[0].interest %></div>
            </div>
        </div>
    <% end %>
    </br>
</div>