<div class="inner-profile" style="margin-left: 20%;">
<div class="bg-white shadow rounded overflow-hidden" style="margin:auto; width: 50%;">
    <div class="px-4 pt-0 pb-4 cover">
        <div class="media align-items-end profile-head">
            <div class="profile mr-3"><%= image_tag("/images/gamer_pic.jpg") %>
            <% if @current_user.id == @user.id %>
                <a href="#" class="btn btn-outline-dark btn-sm btn-block disabled"
                <%= @current_user.id.to_s %>">Follow</a></div>
            <% elsif @following then %>
                <a href="#" class="btn btn-outline-dark btn-sm btn-block"
                    data-reflex="click->ProfileReflex#unfollow"
                    data-user_id="<%= @user.id.to_s %>"
                    data-current_user_id="<%= @current_user.id.to_s %>">Unfollow</a></div>
            <% else %>
                <a href="#" class="btn btn-outline-dark btn-sm btn-block"
                    data-reflex="click->ProfileReflex#follow"
                    data-user_id="<%= @user.id.to_s %>"
                    data-current_user_id="<%= @current_user.id.to_s %>">Follow</a></div>
            <% end %>
            <div class="media-body mb-5 text-white">
            <h4 class="mt-0 mb-0"><%= @user.username %></h4>
            <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i></p>
            </div>
        </div>
    </div>
    <div class="bg-light p-4 d-flex justify-content-end text-center">
        <ul class="list-inline mb-0">
            <li class="list-inline-item">
                <h5 class="font-weight-bold mb-0 d-block"><%= @user.followers.count %></h5><small class="text-muted"> <i class="fas fa-user mr-1"></i>Followers</small>
            </li>
            <li class="list-inline-item">
                <h5 class="font-weight-bold mb-0 d-block"><%= @user.following.count %></h5><small class="text-muted"> <i class="fas fa-user mr-1"></i>Following</small>
            </li>
        </ul>
    </div>
    
    <div class="px-4 py-3">
        <h5 class="mb-0"><%="Stream link: #{@user.stream_link}"%></h5>
    </div>

    <% unless @channel.nil? %>
        <div class="px-4 py-3">
            <h5 class="mb-0"><%="Youtube link: youtube.com/#{@channel.title}"%></h5>
        </div>

        <div class="px-4 py-3">
        <div class="p-4 rounded shadow-sm bg-light">
            <p class="mb-0">
                <%= "Subscriber count: " + @channel.subscriber_count.to_s %> </br></br>
                <%= "View count: " + @channel.view_count.to_s %> </br></br>
                <%= "Video count: " + @channel.video_count.to_s %>
            </p>
        </div>
        </div>
    <% end %>

    <div class="px-4 py-3">
        <h5 class="mb-0">About</h5>
        <div class="p-4 rounded shadow-sm bg-light">
            <p class="font-italic mb-0"><%= @user.description %></p>
        </div>
    </div>
</div>
</div>