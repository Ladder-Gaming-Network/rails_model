<p id="notice"><%= notice %></p>

<div class="resource-heading-container d-flex justify-content-between">
  <h1 class="heading">Viewcounts</h1>
  <div class="resource-actions my-auto">
    <%= link_to 'New Viewcount', new_viewcount_path, class: 'primary-button' %>
  </div>
</div>

<div class="resource-body-container">
  <table class="table table-striped resource-table">
    <thead>
      <tr>
        <th scope="col">Stream</th>
        <th scope="col">Viewers</th>
        <th scope="col">Created At</th>
        <th scope="col" colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @viewcounts.each do |viewcount| %>
        <tr>
          <td><%= viewcount.stream_id %></td>
          <td><%= viewcount.viewers %></td>
          <td><%= viewcount.created_at %></td>
          <td><%= link_to 'Show', viewcount %></td>
          <td><%= link_to 'Edit', edit_viewcount_path(viewcount) %></td>
          <td><%= link_to 'Destroy', viewcount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>