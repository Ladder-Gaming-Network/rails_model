<div class="resource-heading-container">
  <h1 class="heading">View Counts</h1>
</div>

<div class="row no-gutters">
  <div class="col-md-8 offset-2">
    <%= form_with(model: viewcount) do |f| %>
      <% if viewcount.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(viewcount.errors.count, "error") %> prohibited this viewcount from being saved:</h2>
          <ul>
            <% viewcount.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
     
      <div class="form-container">
        <div class="form-item">
          <div class="row no-gutters">
            <div class="col-lg-4">
              <%= f.label :stream_id %>
            </div>
            <div class="col-lg-8">
              <%= f.number_field :stream_id, class: 'mb-3 form-control' %>
            </div>
          </div>
        </div>

        <div class="form-item">
          <div class="row no-gutters">
            <div class="col-lg-4">
              <%= f.label :viewers %>
            </div>
            <div class="col-lg-8">
              <%= f.number_field :viewers, class: 'mb-3 form-control' %>
            </div>
          </div>
        </div>

        <div class="form-item">
          <div class="row no-gutters">
            <div class="col-lg-4">
              <%= f.label :created_at %>
            </div>
            <div class="col-lg-8">
              <%= f.datetime_select :created_at, class: 'mb-3 form-control' %>
            </div>
          </div>
        </div>

      <%= f.submit "Submit", class: "btn primary-button w-100" %>
    <% end %>
  </div>
</div>
