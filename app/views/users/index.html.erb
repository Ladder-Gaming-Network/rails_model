<p id="notice"><%= notice %></p>

<div class="resource-heading-container">
  <h1 class="heading">Users</h1>
</div>

<div class="resource-body-container">
  <table class="table table-striped resource-table">
    <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Lastname</th>
        <th scope="col">Stream link</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @users.drop(1).each do |user| %>
        <tr>
          <td><a href=<%="/users/" + user.id.to_s %>><p><%=user.username%></p></a></td>
          <td><%= user.lastname %></td>
          <td><%= user.stream_link %></td>
          <td><%= user.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>